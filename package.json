{
  "name": "choir",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "anchor": "cd anchor && anchor",
    "anchor-build": "cd anchor && anchor build",
    "anchor-localnet": "cd anchor && anchor localnet",
    "dev": "concurrently \"pnpm run next-dev\" \"pnpm run fastapi-dev\"",
    "next-dev": "next dev",
    "fastapi-dev": "cd api && source venv/bin/activate && uvicorn main:app --reload",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest ",
    "test:py": "cd api && pytest",
    "test:watch": "jest --watch",
    "test:anchor": "cd anchor && anchor test",
    "test:pynext": "concurrently \"cd api && pytest\" \"pnpm run test\"",
    "test:all": "concurrently \"pnpm run test:anchor\" \"pnpm run test\" \"cd api && pytest\""
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.30.1",
    "@solana/spl-token": "0.4.9",
    "@solana/wallet-adapter-base": "0.9.23",
    "@solana/wallet-adapter-react": "0.15.35",
    "@solana/wallet-adapter-react-ui": "0.9.35",
    "@solana/web3.js": "1.95.4",
    "@tabler/icons-react": "3.20.0",
    "@tanstack/react-query": "5.59.16",
    "@tanstack/react-query-next-experimental": "5.59.16",
    "@types/node": "^20.17.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "bs58": "^4.0.1",
    "daisyui": "4.12.13",
    "jotai": "^2.10.1",
    "next": "15.0.2",
    "postcss": "^8.4.47",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hot-toast": "2.4.1",
    "react-markdown": "^9.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/chai": "^4.3.20",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^10.8.2",
    "ts-mocha": "^10.0.0",
    "whatwg-fetch": "^3.6.20"
  },
  "pnpm": {
    "overrides": {
      "bs58": "^4.0.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18"
      }
    }
  }
}
