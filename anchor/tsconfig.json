{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["tests/**/*"]
}
